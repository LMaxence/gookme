{
  "$schema": "../assets/schemas/hooks.schema.json",
  "steps": [
    {
      "name": "format",
      "command": "./scripts/check-format.sh",
      "onlyOn": "*.go"
    },
    {
      "name": "lint",
      "command": "golangci-lint run $(go list -f '{{.Dir}}/...' -m)",
      "onlyOn": "*.go"
    }
  ]
}
